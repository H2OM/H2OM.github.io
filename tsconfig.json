{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["react", "react-dom", "jest"],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/routes/*": ["src/routes/*"],
      "@/src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.tsx", "__tests__/**/*.tsx"],
  "exclude": ["node_modules"]
}
